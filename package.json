{
  "name": "electron-updater-example",
  "version": "0.7.0",
  "main": "main.js",
  "description": "electron-updater example project",
  "author": "Matt Haggard",
  "scripts": {
    "publish": "build -p always"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.43.3"
  },
  "dependencies": {
    "electron-builder-squirrel-windows": "^20.8.0",
    "electron-log": "^1.3.0",
    "electron-updater": "^2.18.2"
  },
  "build": {
    "appId": "com.github.iffy.electronupdaterexample",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": [
        "squirrel"
      ],
      "icon": "./app.ico"
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/electron/electron-api-demos/master/assets/app-icon/win/app.ico",
      "useAppIdAsId": true,
      "remoteReleases": true,
      "remoteToken": "c0675eec2d6fc934531a980ced64186dbc981873"
    }
  }
}
